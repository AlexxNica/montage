{
    "owner": {
        "properties": {
            "element": {"#": "component"}
        }
    },

    "alternation": {
        "prototype": "montage/ui/alternation.reel",
        "properties": {
            "element": {"#": "alternation"},
            "switchPath": "object.isAdmin ? 'admin' : 'user'",
            "content": [
                {"name": "John", "isAdmin": true},
                {"name": "Mary", "isAdmin": false}
            ]
        }
    },

    "admin": {
        "prototype": "montage/ui/text.reel",
        "properties": {
            "element": {"#": "admin"}
        },
        "bindings": {
            "value": {"<-": "@alternation.objectAtCurrentIteration.name"}
        }
    },

    "user": {
        "prototype": "montage/ui/text.reel",
        "properties": {
            "element": {"#": "user"}
        },
        "bindings": {
            "value": {"<-": "@alternation.objectAtCurrentIteration.name"}
        }
    }
}
